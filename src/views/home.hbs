  <link rel="stylesheet" href="https://bootswatch.com/5/zephyr/bootstrap.min.css" />
  <style>
    @keyframes scaleIn {
      from {
        transform: scale(1);
      }
      to {
        transform: scale(1.05);
      }
    }
    body {
      background-color: black;
    }

    .card {
      margin-bottom: 20px;
      transition: transform 0.3s;
      animation-fill-mode: forwards;
      max-height: 800px;
    }
    .card:hover {
      animation-name: scaleIn;
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    .green{
      background-color: hsl(117, 81%, 45%);
      border-color: hsl(117, 81%, 45%);
      color:black;
    }
    .green:hover{
      background-color: hsl(117, 79%, 31%);
      border-color: hsl(117, 79%, 31%);;
    }
    .purple{
      background-color: hsl(295, 93%, 31%);
      border-color: hsl(295, 93%, 31%);
    }
    .cgreen {
      color: hsl(117, 81%, 45%);
      text-align: justify;
    }
    .blueI {
      background-color: hsl(202, 100%, 92%);
      border-color:hsl(202, 100%, 92%);
    }
    .blueI:hover{
      background-color: hsl(202, 100%, 92%);
      border-color:hsl(202, 100%, 92%);
    }
    .blueB {
      background-color: hsl(184, 85%, 52%);
      border-color:hsl(184, 85%, 52%);
      color:black;
    }
    .blueB:hover{
      background-color: hsl(189, 76%, 47%);
      border-color:hsl(189, 76%, 47%);
    }
    .pink1 {
      background-color: hsl(332, 99%, 61%);
      border-color:hsl(332, 99%, 61%);
      color:black;
    }
    .pink1:hover{
      background-color: hsl(332, 77%, 41%);
      border-color:hsl(332, 77%, 41%);
    }
    .card-text {
      max-height: 4em; /* Establece la altura máxima en 3 líneas de texto */
      overflow-y: auto; /* Agrega una barra de desplazamiento vertical si el contenido excede la altura máxima */
      text-align: justify;
    }
    .form-check-input:checked {
      background-color: #fefa1b; /* Cambia el color de fondo cuando el checkbox está marcado */
      border-color: #fefa1b; /* Cambia el color del borde cuando el checkbox está marcado */
      size: 4em;
    }
    .cyellow {
      color: #fefa1b;
    }
    .cdate {
      color: #75730b;
    }
    .cpink2 {
      color: hsl(332, 100%, 85%);
    }


  </style>
</head>

